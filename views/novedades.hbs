<section class="seccion-pagina text-white">
    {{#each novedades}}
    <div class="producto" style="margin-top: 10px; background-image: url('{{imagen}}');">
        <div class="contenido">
            <h2>{{titulo}}</h2>
            <p>{{cuerpo}}</p>
            <a href="#" data-toggle="modal" data-target="#exampleModal{{id}}">
                <button>Leer MÃ¡s</button>
            </a>
        </div>
    </div>
    {{/each}}
</section>

<!-- Modales -->
{{#each novedades}}
<div class="modal fade" id="exampleModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h1 class="modal-title text-white" id="exampleModalLabel">{{titulo}}</h1>
                <button type="button" class="btn-close btn btn-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-body-custom">
                <h3 class="text-white">{{subtitulo}}</h3>
                {{#if imagen}}
                <img src="{{imagen}}" class="img-fluid">
                {{/if}}
                {{#if video_id}}
                <div class="video-container">
                     <video class="img-fluid" controls>
                        <source src="{{video_id}}" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                    
                </div>
                {{/if}}
                <p class="text-white">{{cuerpo}}</p>
            </div>
        </div>
    </div>
</div>
{{/each}}